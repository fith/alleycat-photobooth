FROM python:3.11-alpine

# Install system dependencies
RUN apk add --no-cache \
    gcc \
    musl-dev \
    python3-dev \
    linux-headers

# Install Python dependencies
RUN pip install --no-cache-dir \
    RPi.GPIO \
    spidev

# Create and set working directory
WORKDIR /app

# Copy the RFID tester script
COPY src/rfidreader/rfid_tester.py /app/

# Set the entrypoint
CMD ["python", "rfid_tester.py"]
